@startuml
!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml
LAYOUT_WITH_LEGEND()

' Акторы
Person(customer, "Клиент", "Просматривает депозиты, подаёт заявку, подтверждает по СМС, получает уведомления")
Person(ccAgent, "Менеджер кол-центра", "Обрабатывает заявки с сайта, связывается с клиентом")
Person(backoffice, "Сотрудник бэк-офиса депозитов", "Рассматривает заявки и подтверждает условия депозита в АБС")

' Внутренние системы
System_Boundary(bank, "Банк «Стандард» — внутренние системы") {
  System(site, "Сайт", "Показ депозитов, сбор заявки (для новых клиентов)")
  System(ib, "Интернет-банк", "Показ депозитов и персональных ставок, подача заявки с подтверждением по СМС")
  System(ccs, "Система кол-центра", "Приём и ведение обращений с сайта, рабочее место менеджера")
  System(abs, "АБС банка", "Учёт, хранение ставок, подтверждение условий, открытие депозита, проведение операций")
  System(smsgw, "СМС-шлюз", "Отправка СМС подтверждений и уведомлений клиенту")
}

' Внешние системы
System_Ext(telecom, "Телеком-оператор (SMSC-провайдер)", "Доставка СМС-сообщений")

' Связи (контекст депозита)
Rel(customer, site, "Просматривает депозиты, подаёт заявку")
Rel_R(customer, ib, "Просматривает депозиты/персональные ставки, подаёт заявку, подтверждает по СМС")

Rel(site, ccs, "Передаёт заявку с сайта")
Rel(ccAgent, ccs, "Обрабатывает заявку, связывается с клиентом")
Rel(ccs, abs, "Создаёт/актуализирует заявку в АБС")

Rel(backoffice, abs, "Рассматривает заявку, подтверждает условия, открывает депозит")
Rel(ib, abs, "Передаёт заявку, получает ставки")

Rel(abs, smsgw, "Отправляет СМС: подтверждение, уведомления")
Rel(smsgw, telecom, "Передаёт СМС для доставки")
Rel(telecom, customer, "Доставляет СМС")

SHOW_LEGEND()
@enduml
